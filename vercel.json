{
  "version": 2,

  "cleanUrls": true,
  "builds": [
    {
      "src": "api/blog.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/blog/[id].js",
      "use": "@vercel/node"
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "includeFiles": "public/**"
    }
  ],

  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/blog/[id]",
      "dest": "/api/blog/[id].js"
    },
    {
      "src": "/api/blog",
      "dest": "/api/blog.js"
    }
  ]
}
